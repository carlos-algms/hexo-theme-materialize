{
  "env": {
    "browser": true,
    "node": false,
    "es6": true,
    "amd": true,
    "mocha": true,
    "jasmine": true,
    "protractor": true
  },

  "extends": "airbnb-base",

  "globals": {
    "sinon": true,
    "inject": true,
    "should": true,
    "waitElementVisible": true,
    "requirejs": true
  },

  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "script"
  },

  "rules": {
    "comma-dangle": 0,
    "no-use-before-define": ["error", { "functions": false, "classes": true }],
    "no-console": ["error", { "allow": ["warn", "error", "info", "debug", "log"] }],
    "no-param-reassign": ["error", { "props": false }],
    "radix": ["error", "as-needed"],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "import/no-amd": "off",
    "strict": "off"
  },

  "overrides": [
    {
      "files": ["Gruntfile.js"],
      "env": {
        "browser": false,
        "node": true,
        "amd": false
      }
    }
  ]
}
